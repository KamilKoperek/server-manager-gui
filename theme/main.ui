<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object id="window" class="GtkWindow">
    <property name="title">GUI Server Manager</property>
    <property name="default-height">500</property>
    <property name="default-width">500</property>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="header">
        <child type="start">
          <object class="GtkButton" id="refreshButton">
            <property name="label">Refresh</property>
          </object>
        </child>
        <child type="start">
          <object class="GtkButton" id="optionsButton">
            <property name="label">Options</property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object id="mainGrid" class="GtkGrid">
        <child>
          <object id="serversScrooledWindow" class="GtkScrolledWindow">
            <style>
              <class name="mainScrooledWindow" />
            </style>
            <property name="propagate-natural-width">true</property>
            <property name="vexpand">true</property>
            <child>
              <object id="serversList" class="GtkGrid"></object>
            </child>
          </object>
        </child>

        <child>
          <object id="subServersScrooledWindow" class="GtkScrolledWindow">
            <style>
              <class name="mainScrooledWindow" />
            </style>
            <property name="propagate-natural-width">true</property>
            <property name="vexpand">true</property>
            <child>
              <object id="subServersList" class="GtkGrid"></object>
            </child>
          </object>
        </child>

        <child>
          <object id="configScrooledWindow" class="GtkScrolledWindow">
            <style>
              <class name="mainScrooledWindow" />
            </style>
            <property name="propagate-natural-width">true</property>
            <property name="vexpand">true</property>
            <child>
              <object id="configurationGrid" class="GtkGrid"></object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>